<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice Generation System</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; padding: 0; }
        h1 { text-align: center; }
        .form-container { max-width: 600px; margin: auto; padding: 20px; border: 1px solid #ccc; border-radius: 5px; }
        .form-container label { display: block; margin: 10px 0 5px; }
        .form-container input { width: 100%; padding: 8px; margin-bottom: 10px; border: 1px solid #111110; border-radius: 4px; }
        .form-container button { width: 100%; padding: 10px; background-color: #615e0c; color: white; border: none; border-radius: 5px; cursor: pointer; }
        .form-container button:hover { background-color: #dfaf13; }
    </style>
</head>
<body>
    <h1>Invoice Generation System</h1>
    <div class="form-container">
        <label for="customerName">Customer Name</label>
        <input type="text" id="customerName" placeholder="Enter customer name">
        
        <label for="customerAddress">Customer Address</label>
        <input type="text" id="customerAddress" placeholder="Enter customer address">
        
        <label for="phoneNumber">Phone Number</label>
        <input type="text" id="phoneNumber" placeholder="Enter phone number">

        <label for="customerType">Customer Type</label>
        <input type="text" id="customerType" placeholder="Enter customer type (e.g., Individual, Business)">
        
        <label for="itemDescription">Item Description</label>
        <input type="text" id="itemDescription" placeholder="Enter item description">
        
        <label for="quantity">Quantity</label>
        <input type="number" id="quantity" placeholder="Enter quantity" min="1">
        
        <label for="price">Price Per Unit</label>
        <input type="number" id="price" placeholder="Enter price per unit" step="0.01" min="0">
        
        <label for="taxRate">Tax Rate (%)</label>
        <input type="number" id="taxRate" placeholder="Enter tax rate" step="0.01" min="0">
        
        <button onclick="generateInvoice()">Generate Invoice</button>
    </div>

    <script>
        function generateInvoice() {
            const customerName = document.getElementById('customerName').value;
            const customerAddress = document.getElementById('customerAddress').value;
            const phoneNumber = document.getElementById('phoneNumber').value;
            const customerType = document.getElementById('customerType').value;
            const itemDescription = document.getElementById('itemDescription').value;
            const quantity = parseInt(document.getElementById('quantity').value);
            const price = parseFloat(document.getElementById('price').value);
            const taxRate = parseFloat(document.getElementById('taxRate').value);

            const itemTotal = quantity * price;
            const tax = (itemTotal * taxRate) / 100;
            const total = itemTotal + tax;

            // Store the data in localStorage
            localStorage.setItem('customerName', customerName);
            localStorage.setItem('customerAddress', customerAddress);
            localStorage.setItem('phoneNumber', phoneNumber);
            localStorage.setItem('customerType', customerType);
            localStorage.setItem('itemDescription', itemDescription);
            localStorage.setItem('quantity', quantity);
            localStorage.setItem('price', price);
            localStorage.setItem('itemTotal', itemTotal);
            localStorage.setItem('tax', tax);
            localStorage.setItem('total', total);

            // Redirect to the invoice page
            window.location.href = 'invoice.html';
        }
    </script>
</body>
</html>
